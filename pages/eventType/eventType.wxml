<!--pages/eventType/eventType.wxml-->
<view class="container">
  <form bindsubmit="submitForm">
    <view class="form-group">
      <label>姓名：</label>
      <input type="text" name="userName"  placeholder="请输入中文/英文名字" wx:if="{{eventType === '个人预约'}}"/>
      <input type="text" name="userName" placeholder="请输入负责人姓名" wx:else/>
    </view>
    <view class="form-group">
      <label>手机号：</label>
      <input type="number" name="phone" placeholder="请输入手机号" wx:if="{{eventType === '个人预约'}}"/>
      <input type="number" name="phone" placeholder="请输入负责人手机号" wx:else/>
    </view>
    <view class="form-group">
      <label>性别：</label>
      <picker bindchange="bindSex" name="sex" value="{{sex}}" range="{{sexList}}">
        <view class="picker" wx:if="{{sex}}">{{sex}}<view class="arrow"></view></view>
        <view class="picker" wx:else>请选择性别<view class="arrow"></view></view>
      </picker>
    </view>
    <view class="form-group">
      <label>工作单位：</label>
      <input type="number" name="unit" placeholder="请输入工作单位" />
    </view>
    <view class="form-group" wx:if="{{eventType === '个人预约'}}">
      <label>电子会员卡号：</label>
      <input type="number" name="memberCard" placeholder="请输入会员卡号" />
    </view>
    <view class="form-group">
      <label>预约时间：</label>
      <picker mode="date" name="date" value="{{date}}" start="{{checkStartTime}}" end="{{checkEndTime}}" bindchange="bindDate">
        <view class="picker" wx:if="{{date}}">{{date}}<view class="arrow"></view></view>
        <view class="picker" wx:else>请选择日期<view class="arrow"></view></view>
      </picker>
      <picker mode="time" name="startTime" value="{{startTime}}" start="09:00" end="21:00" bindchange="bindStart" minuteStep="60">
        <view class="picker" wx:if="{{startTime}}"> {{startTime}}<view class="arrow"></view></view>
        <view class="picker" wx:else>请选择开始时间<view class="arrow"></view></view>
      </picker>
      <picker mode="time" name="endTime" value="{{endTime}}" start="09:00" end="21:00" bindchange="bindEnd" minuteStep="60">
        <view class="picker" wx:if="{{endTime}}">{{endTime}}<view class="arrow"></view></view>
        <view class="picker" wx:else="">请选择结束时间<view class="arrow"></view></view>
      </picker>
    </view>
    <view class="form-group" wx:if="{{scene === '乒乓球馆'}}">
      <label>桌号：</label>
        <view class="sign-setting-border {{idx==item.id?'selected':''}}" name="tableNumber" value="{{idx}}" wx:for="{{tableList}}" wx:key="id" bindtap='selectApply' data-id="{{item.id}}">{{item.number}}</view>
    </view>
    <view class="form-group" wx:if="{{eventType === '团队预约'}}">
      <label>活动人数：</label>
      <input type="number" name="activeNumber" placeholder="请输入活动人数" />
    </view>
    <view class="form-group" wx:if="{{eventType === '团队预约'}}">
      <label>活动内容描述：</label>
      <textarea class="area" name="remark" placeholder="请输入备注" auto-focus="true"></textarea>
    </view>
    <button type="primary" form-type="submit" style="height: 80rpx;width: 94%;line-height: 80rpx;margin: auto;margin-bottom: 20rpx;">预约</button>
  </form>
</view>