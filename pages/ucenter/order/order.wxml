<scroll-view class='content' scroll-y="true" style='width: 100%; height:89%;background-color: #efefef;'>
  <block wx:for="{{showData}}" wx:key="scene" >
    <view class = "button_item" >
      <button class="goods" >
      <!--之所以利用button控件来承载是因为block循环其他控件会产生重叠现象，这里我没有细究-->
        <!-- <view class= "goods_head"><image class="logo" src = "{{item.store_img_url}}"></image></view>
        <view class="divLine"></view> -->
        <image class="goods_logo" src = "/static/images/myblue.png"></image>
        <text class="name">姓名：{{item.userName}}</text>
        <text class="goods_name">场所：{{item.scene}}</text>
        <text class="table_row" wx:if="item.tableNumber !== ''">桌号：{{item.tableNumber}}</text>
        <text class="introduce">开始时间：{{item.startTime}}</text>
        <text class="amount">结束时间：{{item.endTime}}</text>
        <!-- <progress class = "goods_progress"  percent="{{item.saled_num}}" color = "#0cc22a" active = "true" ></progress> -->
        <button class = "btn_goods" data-item="{{item}}" bindtap="cancel_click">
          <view class = "buy">取消预约</view>
        </button>
      </button>
    </view>
  </block>
</scroll-view>
